<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.NewPartyActivity"
        android:paddingTop="150dp"
        android:background="@android:color/holo_blue_light">

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Name"
            android:ems="10"
            android:id="@+id/party_name_edit"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/rounded_edittext_register_login"
            android:autofillHints="" app:layout_constraintHorizontal_bias="0.0"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:ems="10"
            android:id="@+id/party_password_edit"
            android:paddingLeft="20dp"
            android:inputType="textPassword"
            android:paddingRight="20dp"
            android:background="@drawable/rounded_edittext_register_login"
            android:hint="@string/password"
            android:autofillHints=""
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/party_name_edit" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:text="@string/create"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/create_party_button"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/party_password_edit" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>